{
  "name": "@video-app/shared",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsc && npm run build:cjs",
    "build:cjs": "node -e \"require('fs').writeFileSync('dist/index.cjs', \\\"module.exports = require('./index.js');\\\\n\\\")\"",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "zod": "^4.1.13"
  }
}
