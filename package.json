{
  "name": "video-app",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:backend": "npm run build --workspace=packages/shared && npm run build --workspace=apps/backend",
    "build": "npm run build:backend",
    "start": "cd apps/backend && npm start"
  }
}
